<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Profile.ProfileActivity">

  <ImageView
      android:id="@+id/profilePic"
      android:layout_width="181dp"
      android:layout_height="181dp"
      android:layout_marginTop="60dp"
      android:orientation="vertical"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:srcCompat="@tools:sample/avatars" />

  <View
      android:layout_width="2dp"
      android:layout_height="182dp"
      android:background="#c0c0c0"
      app:layout_constraintBottom_toBottomOf="@+id/profilePic"
      app:layout_constraintEnd_toStartOf="@+id/profilePic"
      app:layout_constraintTop_toTopOf="@+id/profilePic" />

  <View
      android:id="@+id/view"
      android:layout_width="2dp"
      android:layout_height="182dp"
      android:background="#c0c0c0"
      app:layout_constraintBottom_toBottomOf="@+id/profilePic"
      app:layout_constraintStart_toEndOf="@+id/profilePic"
      app:layout_constraintTop_toTopOf="@+id/profilePic" />

  <View
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:layout_marginTop="8dp"
      android:background="#c0c0c0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/profilePic" />

  <View
      android:layout_width="0dp"
      android:layout_height="2dp"
      android:background="#c0c0c0"
      app:layout_constraintEnd_toEndOf="@+id/profilePic"
      app:layout_constraintStart_toStartOf="@+id/profilePic"
      app:layout_constraintTop_toTopOf="@+id/profilePic" />

  <View
      android:id="@+id/view2"
      android:layout_width="185dp"
      android:layout_height="2dp"
      android:background="#c0c0c0"
      app:layout_constraintEnd_toEndOf="@+id/profilePic"
      app:layout_constraintStart_toStartOf="@+id/profilePic"
      app:layout_constraintTop_toBottomOf="@+id/profilePic" />

  <TextView
      android:id="@+id/textProfileUsername"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="24dp"
      android:text="@string/username"
      android:textColor="#000000"
      android:textSize="16sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/profilePic" />

  <TextView
      android:id="@+id/textProfileEmail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="16dp"
      android:text="@string/email"
      android:textColor="#000000"
      android:textSize="16sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/fixedProfileUsername" />

  <TextView
      android:id="@+id/fixedProfileUsername"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textProfileUsername" />

  <TextView
      android:id="@+id/fixedProfileEmail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textProfileEmail" />

  <TextView
      android:id="@+id/textProfilePhoneNumber"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="16dp"
      android:text="@string/phone"
      android:textColor="#000000"
      android:textSize="16sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/fixedProfileEmail" />

  <TextView
      android:id="@+id/editProfilePhoneNumber"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textProfilePhoneNumber" />

  <TextView
      android:id="@+id/textProfileAddress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="16dp"
      android:text="@string/registerAddress"
      android:textColor="#000000"
      android:textSize="16sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editProfilePhoneNumber" />

  <TextView
      android:id="@+id/editProfileAddress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textProfileAddress" />

  <TextView
      android:id="@+id/textProfilePassword"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="16dp"
      android:text="@string/password"
      android:textColor="#000000"
      android:textSize="16sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editProfileAddress" />

  <TextView
      android:id="@+id/editProfilePassword"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textProfilePassword" />

  <Button
      android:id="@+id/upload"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:text="upload"
      app:layout_constraintBottom_toBottomOf="@+id/buttonChangeDetail"
      app:layout_constraintStart_toEndOf="@+id/buttonChangeDetail"
      app:layout_constraintTop_toTopOf="@+id/buttonChangeDetail" />
      android:visibility="invisible"
      tools:layout_editor_absoluteX="159dp"
      tools:layout_editor_absoluteY="634dp" />

  <Button
      android:id="@+id/buttonBack"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:text="@string/back"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editProfilePassword" />

  <Button
      android:id="@+id/buttonChangeDetail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:text="@string/changDetail"
      app:layout_constraintBottom_toBottomOf="@+id/buttonBack"
      app:layout_constraintStart_toEndOf="@+id/buttonBack"
      app:layout_constraintTop_toTopOf="@+id/buttonBack" />

</androidx.constraintlayout.widget.ConstraintLayout>